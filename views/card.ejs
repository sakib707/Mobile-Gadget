<div class="row">
    <% for( i = 0; i < products.length; i++ ) { %>
        <div class="col-2">
            <div class="card shadow mb-4">
                <div class="product-card">
                    <a href="/details-page/<%- products[i].id -%>" class="card-link">
                        <img src="<%- products[i].image -%>" class="card-img-top" alt="CardImage">
                        <div class="card-body text-center">
                            <h5 class="card-title clamped-text mt-1"><%- products[i].name -%></h5>
                            <p class="card-text">$ <%- products[i].price -%></p>
                            <p><%-products[i].brand_id.name %></p>
                        </div>
                    </a>
                    <div class="text-center mb-3">
                        <button type="button" id="details-btn" class="btn btn-sm">Details</button>
                        <button type="button" id="buy-now-btn" class="btn btn-sm">Buy Now</button>
                    </div>
                </div>
            </div>
        </div>
    <% } %>
</div>
